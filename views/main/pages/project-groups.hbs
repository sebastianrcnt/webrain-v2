<link rel="stylesheet" href="/css/list2.css" />
{{> header }}
<section class="list-content-section">
  <div class="list-content-header">
    <h2><span>MoNET</span>Project Groups</h2>
  </div>
  <style>
    .image-container img {
      object-fit: cover;
    }
  </style>
  <div class="list-content-container">
    <h3><i class="fas fa-list"></i>프로젝트 그룹 목록</h3>
    <ul class="list-content-thumbnail">
      {{#each projectGroups as | projectGroup |}}
      <li>
        <a href="/main/project-groups/{{ projectGroup.id }}" class="list-link">
          <span class="image-container">
            <img src="/uploads/{{ projectGroup.coverFileId }}" alt="any" />
          </span>
          <span class="list-content-thumbnail-title">
            <span class="item-title">
              {{ projectGroup.name }}
            </span>
            <span class="item-text">
              {{ projectGroup.description }}
            </span>
          </span>
        </a>
      </li>
      {{/each}}
    </ul>
  </div>
</section>
<!-- login contents end -->
{{> footer }}